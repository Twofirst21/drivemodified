<h1>Route to Index is working</h1>
<div class="wrapper-grey">
  <div class="container-wrap text-center light-grey-background">
    <h1>Car Listings</h1>
   <div class="row">
      <div class="col-xs-12">  
        <% @cars.sample(21).each do |car| %>
          <div class="col-xs-12 col-sm-4">
            <section id="content">
              <%= link_to "", car_path(car)%>
              <h4><%=car.brand%> <%=car.model%></h4>
              <% end %>
			</section>
			</div>
		</div>
	</div>
	</div>
</div>
<div class="container">
    <br><br><br><br><br>
    <h2 class="title"><span style="color:#25898b;">Discover your sound.</span></br>Rent musical cars, equipment, and gears.</h2>


    <section class="search-form">
      <%= simple_form_for :search, url: cars_path, method: "get", html: { class: 'form-inline' } do |f| %>
        <%= f.input :name, input_html: { class: 'search-input' }, label: false, placeholder: "What car are you looking for?" %>
        <%= f.submit class: 'search-btn' %>
      <% end %>
    </section>
    <br><br>

    <section class="gallery">
      <div class="row">
        <% @cars.each do |car| %>
          <div class="col-xs-4">
            <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= cl_image_path car.photo.path %>)>
              <%= link_to car_path(car), class: 'card-link' do %><% end %>
              <div class="card-category"><%= car.brand + " " + car.model %></div>
              <div class="card-description">
                <p> <%= "$ #{car.price}" %> </p>
              </div>
            </div>
          </div>
        <% end %>
      </div>

      <% if @message %>
        <br>
        <br>
        <br>
        <p> <%= @message %> </p>
      <% end %>

    </section>
</div>

